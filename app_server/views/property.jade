        .container
          section
            .container
              .d-flex.justify-content-center.h-100
                .card
                  .card-header
                    h3 Add Property
                  |                 
                  .card-body
                    form#addproperty.needs-validation(name='addproperty', method='post', action='/property', novalidate='')
                      label Property type:
                      |                     
                      .input-group.mb-3
                        .input-group-prepend
                          .input-group-text
                            .form-check-inline
                              label.form-check-label
                                input.form-check-input(type='radio', name='optradio')
                                | Apartment
                            |                           
                            .form-check-inline
                              label.form-check-label
                                input.form-check-input(type='radio', name='optradio')
                                | Independent house
                            |                           
                            .form-check-inline.disabled
                              label.form-check-label
                                input.form-check-input(type='radio', name='optradio')
                                | Villa
                      |                     
                      label(for='propName') Property Name:
                      |                     
                      .input-group.form-group
                        .input-group-prepend
                          span.input-group-text
                            i.fa.fa-home
                        |                       
                        input#propName.form-control(type='text', name='propName', required='')
                        |                       
                        .invalid-feedback Please enter Property Name
                      |                     
                      label(for='description') Description:
                      |                     
                      .input-group.form-group
                        .input-group-prepend
                          span.input-group-text
                            i.fa.fa-home
                        |                       
                        textarea#description.form-control(rows='3', placeholder='Type here..', name='description', required='')
                        |                       
                        .invalid-feedback Please enter your Property Description
                      |                     
                      label(for='bedrooms') Bedrooms:
                      |                     
                      .input-group.form-group
                        .input-group-prepend
                          span.input-group-text
                            i.fa.fa-hotel
                        |                       
                        select#bedrooms.form-control
                          option 1
                          |                         
                          option 2
                          |                         
                          option 3
                          |                         
                          option 4
                      |                     
                      label Furnish Type:
                      |                     
                      .input-group.mb-3
                        .input-group-prepend
                          .input-group-text
                            .form-check-inline
                              label.form-check-label
                                input.form-check-input(type='radio', name='optradio')
                                | Unfurnished
                            |                           
                            .form-check-inline
                              label.form-check-label
                                input.form-check-input(type='radio', name='optradio')
                                | Semi-furnished
                            |                           
                            .form-check-inline.disabled
                              label.form-check-label
                                input.form-check-input(type='radio', name='optradio')
                                | Fully Furnished
                      |                     
                      label Facilities:
                      |                     
                      .form-check
                        label.form-check-label
                          input.form-check-input(type='checkbox', value='')
                          | Swimming pool
                      |                     
                      .form-check
                        label.form-check-label
                          input.form-check-input(type='checkbox', value='')
                          | Gym
                      |                     
                      .form-check
                        label.form-check-label
                          input.form-check-input(type='checkbox', value='')
                          | Laundry unit
                      |                     
                      .form-check
                        label.form-check-label
                          input.form-check-input(type='checkbox', value='')
                          | Dishwasher
                      br
                      |                     
                      label(for='propName') Image URL:
                      |                     
                      .input-group.form-group
                        .input-group-prepend
                          span.input-group-text
                            i.fa.fa-home
                        |                       
                        input#imgurl.form-control(type='text', name='imgurl', required='')
                        |                       
                        .invalid-feedback Please enter valid URL
                      |                     
                      label Address
                      |                     
                      .input-group.form-group
                        .input-group-prepend
                          span.input-group-text
                        |                       
                        input#streetaddr1.form-control(type='text', placeholder='Street Address 1', name='streetaddr1', required='')
                        |                       
                        .invalid-feedback Please enter street address
                      |                     
                      .input-group.form-group
                        .input-group-prepend
                          span.input-group-text
                        |                       
                        input#streetaddr2.form-control(type='text', placeholder='Street Address 2', name='streetaddr2')
                        |                       
                        .invalid-feedback Please enter price details
                      |                     
                      .input-group.form-group
                        .input-group-prepend
                          span.input-group-text
                        |                       
                        input#county.form-control(type='text', placeholder='County', name='county', required='')
                        |                       
                        .invalid-feedback Please enter county
                      |                     
                      .input-group.form-group
                        .input-group-prepend
                          span.input-group-text
                        |                       
                        input#city.form-control(type='text', placeholder='City', name='city', required='')
                        |                       
                        .invalid-feedback Please enter city
                      |                     
                      .input-group.form-group
                        .input-group-prepend
                          span.input-group-text
                        |                       
