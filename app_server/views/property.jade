                        .input-group-prepend
                          span.input-group-text
                            i.fa.fa-money
                        |                       
                        input#price.form-control(type='text', placeholder='Price', name='price', required='')
                        |                       
                        .invalid-feedback Please enter price details
                      |                     
                      label Built-up Area
                      |                     
                      .input-group.form-group
                        .input-group-prepend
                          span.input-group-text
                            i.fa.fa-location
                        |                       
                        input#sft.form-control(type='text', placeholder='Area in sft', name='sft', required='')
                        |                       
                        .invalid-feedback Please enter area
                      |                     
                      label Contact
                      |                     
                      .input-group.form-group
                        .input-group-prepend
                          span.input-group-text
                            i.fa.fa-envelope
                        |                       
                        input#email.form-control(type='text', placeholder='xxx@xxx.xxx', name='email', required='', pattern='^.+@.+..{2,4}$')
                        |                       
                        .invalid-feedback
                          | Please enter valid Email Id
                      |                     
                      .input-group.form-group
                        .input-group-prepend
                          span.input-group-text
