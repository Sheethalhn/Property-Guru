doctype html
html
  head
    meta(charset='ISO-8859-1')
    title Property Guru
    link(rel='stylesheet', href='../stylesheets/landing.css')
    link(rel='stylesheet', href='../stylesheets/login.css')
    link(href='../lib/bootstrap-4.0.0/dist/css/bootstrap.min.css', rel='stylesheet')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
    script(src='../lib/bootstrap-4.0.0/dist/js/bootstrap.min.js')
  body
    div
      header
        nav.navbar.navbar-dark.navbar-expand-lg.bg-dark.fixed-top.scrolling-navbar
          #header_bar.container
            a.navbar-brand(href='#') Property Guru
            #basicExampleNav.collapse.navbar-collapse
              ul.navbar-nav.mr-auto
                li.nav-item
                  a.nav-link(href='#') Home
                li.nav-item
                  a.nav-link(href='#services') Services
                li.nav-item
                  a.nav-link(href='#contact') Contact
                li.nav-item
                  a.nav-link(href='#contact') Dashboard
              ul.navbar-nav.ml-auto
                li.nav-item
                  a.nav-link(href='')
                    i.fa.fa-sign-in.nav-item(aria-hidden='true')
                    |  Login
                li.nav-item
                  a.nav-link(href='')
                    i.fa.fa-user-plus.nav-item(aria-hidden='true')
                    |  Register
      section
        .container
          .d-flex.justify-content-center.h-100
            .card
              .card-header
                h3 Sign In
              .card-body
                form
                  .input-group.form-group
                    .input-group-prepend
                      span.input-group-text
                        i.fa.fa-user
                    input.form-control(type='text', placeholder='username')
                  .input-group.form-group
                    .input-group-prepend
                      span.input-group-text
                        i.fa.fa-key
                    input.form-control(type='password', placeholder='password')
                  .form-group
                    input.btn.float-right.btn-dark(type='submit', value='Login')
              .card-footer
                .d-flex.justify-content-center.links
                  | Don't have an account?
                  a(href='#') Register
