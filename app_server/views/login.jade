doctype html
html
  head
    meta(charset='ISO-8859-1')
    title Property Guru
    link(rel='stylesheet', href='/styles/landing.css')
    link(rel='stylesheet', href='/styles/login.css')
    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm', crossorigin='anonymous')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js', integrity='sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl', crossorigin='anonymous')
  body
    div
      header
        nav.navbar.navbar-dark.navbar-expand-lg.bg-dark.fixed-top.scrolling-navbar
          #header_bar.container
            a.navbar-brand(href='/') Property Guru
            #basicExampleNav.collapse.navbar-collapse
              ul.navbar-nav.mr-auto
                li.nav-item
                  a.nav-link(href='/') Home
                li.nav-item
                  a.nav-link(href='/#services') Services
                li.nav-item
                  a.nav-link(href='/#contact') Contact
                li.nav-item
                  a.nav-link(href='/buySearch') Buy
                li.nav-item
                  a.nav-link(href='/property') Sell
                li.nav-item
                  a.nav-link(href='/dashboard') Dashboard
              ul.navbar-nav.ml-auto
                li.nav-item
                  a.nav-link(href='/login')
                    i.fa.fa-sign-in.nav-item(aria-hidden='true')
                    |  Login
                li.nav-item
                  a.nav-link(href='/register')
                    i.fa.fa-user-plus.nav-item(aria-hidden='true')
                    |  Register
      section
        .container
          if(message)
           .d-flex.justify-content-end.h-100.error-msg
             .alert.alert-dark
               | #{message} 
          .d-flex.justify-content-center.h-100
            .card
              .card-header
                h3 Sign In
              .card-body
                form(name="loginuser",method="post",action="/login")
                  .input-group.form-group
                    .input-group-prepend
                      span.input-group-text
                        i.fa.fa-envelope
                    input.form-control(type='text', placeholder='xxx@xxx.xxx',name='email')
                  .input-group.form-group
                    .input-group-prepend
                      span.input-group-text
                        i.fa.fa-key
                    input.form-control(type='password', placeholder='Password',name='password')
                  .form-group
                    input.btn.float-right.btn-dark(type='submit', value='Login')
              .card-footer
                .d-flex.justify-content-center.links
                  | Don't have an account?
                  a(href='/register') Register
