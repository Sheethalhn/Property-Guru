doctype html
html
  head
    meta(charset='ISO-8859-1')
    title Property Guru
    link(rel='stylesheet', href='/styles/landing.css', type='text/css')
    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm', crossorigin='anonymous')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
    script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js', integrity='sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN', crossorigin='anonymous')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js', integrity='sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q', crossorigin='anonymous')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js', integrity='sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl', crossorigin='anonymous')
    script(src='/scripts/landing.js')
    script(src='/scripts/propertyDetails.js')
  body
    div
      header
        nav.navbar.navbar-dark.navbar-expand-lg.bg-dark.fixed-top.scrolling-navbar
          #header_bar.container
            a.navbar-brand(href='/') 
              img.logo(src='/images/logo.jpg')
            #basicExampleNav.collapse.navbar-collapse
              ul.navbar-nav.mr-auto
                li.nav-item
                  a.nav-link(href='/') Home
                li.nav-item
                  a.nav-link(href='/#services') Services
                li.nav-item
                  a.nav-link(href='/#contact') Contact
                li.nav-item
                  a.nav-link(href='/buySearch') Buy
                li.nav-item
                  a.nav-link(href='/property') Sell
                li.nav-item
                  a.nav-link(href='/dashboard') Dashboard
              ul.navbar-nav.ml-auto
                li.nav-item
                 a.nav-link(href='/userListings')
                    |  Hi #{name}
                li.nav-item
                  a.nav-link(href='/logout')
                    i.fa.fa-sign-out.nav-item(aria-hidden='true')
                    |  Logout
      // Main Navigation
      // Main layout
      main
        import propertyDetails
        .container
          section#services.text-center
            h5.mb-5.font-weight-bold
             .row.d-flex.justify-content-center.mb-4.search-header
              .col-md-8
                p Search your dream house.
            br
            br
            form.form-inline.d-flex.justify-content-center.mb-4(name='seachProperty', method='post', action='/buySearch')
              label.mb-5.mr-sm-5.form-label(for='county') Select county :
              select.form-control.mb-5.mr-sm-5(name='county')
                option(value='Any', selected='') Any
                option(value='Alameda') Alameda
                option(value='Alpine') Alpine
                option(value='Amador') Amador
                option(value='Butte') Butte
                option(value='Calaveras') Calaveras
                option(value='Colusa') Colusa
                option(value='Contra Costa') Contra Costa
                option(value='Del Norte') Del Norte
                option(value='El Dorado') El Dorado
                option(value='Fresno') Fresno
                option(value='Glenn') Glenn
                option(value='Humboldt') Humboldt
                option(value='Imperial') Imperial
                option(value='Inyo') Inyo
                option(value='Kern') Kern
                option(value='Kings') Kings
                option(value='Lake') Lake
                option(value='Lassen') Lassen
                option(value='Los Angeles') Los Angeles
                option(value='Madera') Madera
                option(value='Marin') Marin
                option(value='Mariposa') Mariposa
                option(value='Mendocino') Mendocino
                option(value='Merced') Merced
                option(value='Modoc') Modoc
                option(value='Mono') Mono
                option(value='Monterey') Monterey
                option(value='Napa') Napa
                option(value='Nevada') Nevada
                option(value='Orange') Orange
                option(value='Placer') Placer
                option(value='Plumas') Plumas
                option(value='Riverside') Riverside
                option(value='Sacramento') Sacramento
                option(value='San Benito') San Benito
                option(value='San Bernardino') San Bernardino
                option(value='San Diego') San Diego
                option(value='San Francisco') San Francisco
                option(value='San Joaquin') San Joaquin
                option(value='San Luis Obispo') San Luis Obispo
                option(value='San Mateo') San Mateo
                option(value='Santa Barbara') Santa Barbara
                option(value='Santa Clara') Santa Clara
                option(value='Santa Cruz') Santa Cruz
                option(value='Shasta') Shasta
                option(value='Sierra') Sierra
                option(value='Siskiyou') Siskiyou
                option(value='Solano') Solano
                option(value='Sonoma') Sonoma
                option(value='Stanislaus') Stanislaus
                option(value='Sutter') Sutter
                option(value='Tehama') Tehama
                option(value='Trinity') Trinity
                option(value='Tulare') Tulare
                option(value='Tuolumne') Tuolumne
                option(value='Tulare') Ventura
                option(value='Tulare') Yolo
                option(value='Tulare') Yuba
              label.mb-5.mr-sm-5(for='bedrooms') No of bedrooms :
              select.form-control.mb-5.mr-sm-5(name='bedrooms')
                option(value='Any', selected='') Any
                option(value='1') 1
                option(value='2') 2
                option(value='3') 3
                option(value='4') 4
                option(value='5+') 5+
              input.btn.float-right.btn-dark.mb-5.mr-sm-5(type='submit', value='Search')
          hr
          .row
             if(flag==2 && propertyList)
               each property in propertyList
                .col-lg-4.col-md-12.mb-4
                 .z-depth-1-half
                 a(href='/property/#{property._id}')
                  img.img-size(src=property.image, alt='Nothing to display', onerror="this.src='/images/sell.jpg';")
                 h4.my-4.font-weight-bold
                   |$#{property.price}
                 p #{property.description}
                 form(name="propertyDetails",method="get",action="/property/#{property._id}")
                  button.btn.btn-dark(type='submit', value='#{property._id}',name='propertyid')
                   | More Details

             if(flag==1)
              each property in allList
               .col-lg-4.col-md-12.mb-4
                .z-depth-1-half
                a(href='/property/#{property._id}')
                  img.img-size(src=property.image, alt='Nothing to display', onerror="this.src='/images/sell.jpg';")
                h4.my-4.font-weight-bold
                  |$#{property.price}
                p #{property.description}
                form(name="propertyDetails",method="get",action="/property/#{property._id}")
                 button.btn.btn-dark(type='submit', value='#{property._id}',name='propertyid')
                  | More Details


             if(flag==3)
               h5.mb-5.font-weight-bold
                .d-flex.justify-content-center.mb-4.text-center
                  p Sorry Cant find any listing matching with your search criteria.
                  br
                  br
                  br
                  br
                  br
                  br
                  br
          footer.page-footer.font-small.unique-color-dark
            .primary-color
               .container
                .row.py-4.d-flex.align-items-center
                  .col-md-6.col-lg-5.text-center.text-md-left.mb-4.mb-md-0
                    h6.mb-0.white-text
                      | Get connected with us on
                      | social networks!
                  .col-md-6.col-lg-7.text-center.text-md-right
                    a.fb-ic.ml-0
                      i.fa.fa-facebook.white-text.mr-4
                    a.tw-ic
                      i.fa.fa-twitter.white-text.mr-4
                    a.gplus-ic
                      i.fa.fa-google-plus.white-text.mr-4
                    a.li-ic
                      i.fa.fa-linkedin.white-text.mr-4
                    a.ins-ic
                      i.fa.fa-instagram.white-text.mr-lg-4
